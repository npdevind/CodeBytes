<%- include ('../layouts/header') %>
<%- include ('../layouts/sidebar') %>
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Material+Icons">
<link rel="stylesheet" href="https://unpkg.com/bootstrap-material-design@4.1.1/dist/css/bootstrap-material-design.min.css" integrity="sha384-wXznGJNEXNG1NFsbm0ugrLFMQPWswR3lds2VeinahP8N0zJw9VWSopbjv2x7WCvX" crossorigin="anonymous">
<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css" rel="stylesheet">
<link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons">

<main class="page-content">
  <div class="container-fluid">
    <h2><%=title%></h2>
    <div>
      <a href="<%=adminbaseurl%>admin-user"> Add Admin </a>
      <%- include ('../flashMessage') %>
    </div>
    <hr>
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th class="text-center">SL</th>
            <th class="text-center">DP</th>
            <th class="text-center">Name</th>
            <th class="text-center">Username</th>
            <th class="text-center">Email</th>
            <th class="text-center">Mobile</th>
            <th class="text-center">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% var i=1; arrAdminData.forEach(function(val){ %>
            <tr>
              <td class="text-center"><%= i; %> <%! i++; %> </td>
              <td class="text-center"> <%
                var image = 'Admin/'+val.admin_id+'/'+val.image;
                if(helper.isFileExistsIn(image)) image = baseurl +'web-contents/'+  image;
                else image = baseurl + "web-contents/user.png";
                %>
                <img src="<%= image %>" class="oc-profile-picture" style="width: 50px; height: 50px;"></td>
              <td class="text-center"><%= val.name %></td>
              <td class="text-center"><%= val.username %></td>
              <td class="text-center"><%= val.email %></td>
              <td class="text-center"><%= val.mobile %></td>
              <td class="text-center">
                <a rel="tooltip" class="btn btn-success btn-just-icon btn-sm"  href="<%= adminbaseurl%>admin-user/<%= val.admin_id %>"data-original-title="" title="">
                  <i class="material-icons">edit</i>
                </a>
                <a rel="tooltip" class="btn btn-danger btn-just-icon btn-sm" onclick="return confirm('Are you sure to delete?')" href="<%= adminbaseurl%>admin-user/delete/<%= val.admin_id %>" data-original-title="" title="">
                  <i class="material-icons">close</i>
                </a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>

<%- include ('../layouts/footer') %>



